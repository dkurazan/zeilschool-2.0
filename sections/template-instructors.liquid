{% schema %}
    {
        "name": "Page template",
        "settings": [
            {
                "type": "text",
                "id": "btn-text",
                "label": "Button text",
                "default": "WORD OOK INSTRUCTEUR"
            },
            {
                "type": "text",
                "id": "btn-url",
                "label": "Button url",
                "default": "#"
            },
            {
                "type": "color",
                "id": "button-color",
                "label": "Change the button color"
            },
            {
                "type": "color",
                "id": "button-color-hover",
                "label": "Change the button hover color"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Ttile",
                "default": "Wil je ook met ons werken?"
            },
            {
                "type": "richtext",
                "id": "text-content",
                "label": "Change the button hover color"
            }
        ],
        "blocks": [
            {
                "name": "Instructor",
                "type": "block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Instructor image"
                    },
                    {
                        "type": "text",
                        "id": "name-title",
                        "label": "Name/Title",
                        "default": "NOAH - ZEILINSTRUCTEUR"
                    },
                    {
                        "type": "richtext",
                        "id": "desc",
                        "label": "Description"
                    }
                ]
            }
        ]
    }
{% endschema %}