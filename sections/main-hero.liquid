{{ 'hero.css' | asset_url | stylesheet_tag }}
<style>
    {% if section.settings.section-height == 'xl' %}
      .youtube-container iframe, .youtube-container img{
        height: 100vh;
      }
    {%  elsif section.settings.section-height == 'm' %}
      .youtube-container iframe, .youtube-container img{
        height: 975px;
      }
    {%  elsif section.settings.section-height == 'sm' %}
        .youtube-container iframe, .youtube-container img{
          height: 600px;
        }
    {% endif %}
</style>

<div class="start-section">
    <div class="youtube-container">
        {% if section.settings.video_hero %}
            {% assign lastVideo = section.settings.video_hero.sources.length | minus: 1 %}
            <video class="video" src="{{ section.settings.video_hero.sources[lastVideo].url }}" autoplay muted playsinline loop></video>
        {% else %}
            <iframe src="https://www.youtube.com/embed/{{ section.settings.video_link | slice: 32, 11 }}?autoplay=1&mute=1&loop=1&color=white&controls=0&modestbranding=1&playsinline=1&rel=0&enablejsapi=1&cc_lang_pref=1&autopause=0&playlist={{ section.settings.video_link | slice: 32, 11 }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        {% endif %}
    </div>
    <div class="start-section__title main-start-section__title">
        {% if section.settings.title != blank %} 
            <h1>{{ section.settings.title }}</h1>
        {%  else %}
            {% render 'hero-logo' %}
        {% endif %}
    </div>
</div> 

{% schema %}
    {
        "name": "Hero section",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Type the top title"
            },
            {
                "type": "video",
                "id": "video_hero",
                "label": {
                    "en": "Select a video"
                }
            },
            {
                "type": "video_url",
                "id": "video_link",
                "label": {
                "en": "Paste the YouTube video link"
                },
                "accept": [
                    "youtube"
                ],
                "default": "https://www.youtube.com/watch?v=DrQCR3I7TYQ&ab_channel=THEBOATSHOW"
            },
            {
                "type": "select",
                "id": "section-height",
                "label": "Section height",
                "options": [
                    {
                    "label": "Xl (100vh)",
                    "value": "xl"
                    },
                    {
                    "label": "M (975px)",
                    "value": "m"
                    },
                    {
                    "label": "Sm (636px)",
                    "value": "sm"
                    }
                ],
                "default": "xl"
            }
        ],
        "presets": [
            {
                "name": {
                    "en": "Hero section"
                }
            }
        ]
    }
{% endschema %}
