                </li>
                <li>
                  <a href="#">Verzekeringen</a>
                </li>
              </nav>
            </div>
          </div>
          <div class="footer-main__mobile hidden-600">
            <div class="footer-main__buttons">
              <a href="#">Voorwaarden</a>
              <a href="#">DOEN IN DE OMGEVING</a>
              <a href="#">OVER ONS</a>
              <a href="#">DUURZAAMHEID & GREEN KEY</a>
            </div>
          </div>
          <div class="footer-main__logos">
            {% if section.settings.img1 != blank %}
              {{ section.settings.img1 | img_url: 'master' | img_tag }}
            {% else %}
              {{ 'footer-watersport.png' | asset_url | img_tag }}
            {% endif %}
            {% if section.settings.img2 != blank %}
              {{ section.settings.img2 | img_url: 'master' | img_tag }}
            {% else %}
              {{ 'footer-green-key.svg' | asset_url | img_tag }}
            {% endif %}
            {% if section.settings.img3 != blank %}
              {{ section.settings.img3 | img_url: 'master' | img_tag }}
            {% else %}
              {{ 'footer-CWO.png' | asset_url | img_tag }}
            {% endif %}
            {% if section.settings.img4 != blank %}
              {{ section.settings.img4 | img_url: 'master' | img_tag }}
            {% else %}
              {{ 'footer-horeca.png' | asset_url | img_tag }}
            {% endif %}
            {% if section.settings.img5 != blank %}
              {{ section.settings.img5 | img_url: 'master' | img_tag }}
            {% else %}
              {{ 'footer-vdws.svg' | asset_url | img_tag }}
            {% endif %}
            {% if section.settings.img6 != blank %}
              {{ section.settings.img6 | img_url: 'master' | img_tag }}
            {% else %}
              {{ 'footer-hiswa.png' | asset_url | img_tag }}
            {% endif %}
