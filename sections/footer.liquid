{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer" style="background: {{ section.settings.footer-bg }};">
  <div class="container">
    <div class="row">
      <div class="footer__logo">
        <div class="footer__logo-inner">
          <a href="/">
            {% render 'icon-footer-logo' %}
          </a>
        </div>
      </div>
      <div class="footer__inner">
        <header class="footer__header">
          <nav class="row">
            <li>
              Herenweg 144
            </li>
            <li>
              3645 dt vinkeveen
            </li>
            <li>
              t 0297 - 26200
            </li>
            <li>
              INFO@VINKEVEENHAVEN.NL
            </li>
          </nav>
        </header>
        <main class="footer__main">
          <div class="row">
            <div class="footer__main-col">
              <nav>
                <li>
                  <a href="#">OVER ONS</a>
                </li>
                <li>
                  <a href="#">Dit zijn wij</a>
                </li>
                <li>
                  <a href="#">Vacatures & stages</a>
                </li>
                <li>
                  <a href="#">FAQ Haven & zeilschool</a>
                </li>
                <li>
                  <a href="#">Contact & route</a>
                </li>
              </nav>
            </div>
            <div class="footer__main-col">
              <nav>
                <li>
                  <a href="#">DOEN IN DE OMGEVING</a>
                </li>
